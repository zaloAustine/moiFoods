<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Screens.MainMenu"
    tools:showIn="@layout/activity_main_menu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:text="Moi Foods"
                android:fontFamily="cursive"/>

            <TextView
                android:layout_gravity="right"
                android:gravity="right"
                android:id="@+id/how"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple1"
                android:text="How It Works" />
        </LinearLayout>







            <androidx.cardview.widget.CardView
                android:id="@+id/megabites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:gravity="center"
                        android:fontFamily="cursive"
                        android:text="Mega Bites"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/rockers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:gravity="center"
                        android:fontFamily="cursive"
                        android:text="Rockers"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:id="@+id/mwangaza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:fontFamily="cursive"
                            android:text="Mwangaza "
                            android:textColor="@android:color/black"
                            android:textSize="30sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/customC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/purple1"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:fontFamily="cursive"
                        android:text="Custom"
                        android:textColor="@android:color/white"
                        android:textSize="30sp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


    </LinearLayout>




</androidx.core.widget.NestedScrollView>